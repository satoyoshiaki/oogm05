<h2><%= t('.title', resource: resource.model_name.human) %></h2>

<div class = "user_edit_page">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field03">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, class:'form-control' %>
    <%= f.label :アイコン %><br/>
  </div>

  <div class="field04">
    <%= f.file_field :icon, autofocus: true %>
  </div>

  <div class="field03">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control' %>
  </div>

  <div class="field03">
    <%= f.label :プロフィール %><br />
    <%= f.text_area :comment, autofocus: true, class:'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div><%= t('.currently_waiting_confirmation_for_email', email: resource.unconfirmed_email) %></div>
  <% end %>

  <div class="field03">
    <%= f.label :password %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:'form-control' %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field03">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control' %>
  </div>

  <div class="field03">
    <%= f.label :current_password %> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:'form-control' %>
  </div>

  <div class="field03">
  <div class="btnspace">
    <%= f.submit t('.update'),class: 'btn btn-primary btn-lg btn-block' %>
  </div>
  </div>
<% end %>


<div class="btnspace">
  <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-default btn-lg btn-danger" %>
</div>

</div>