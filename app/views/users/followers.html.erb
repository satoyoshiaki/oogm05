<div class="card card-body">
<h3>フォロワー一覧</h3>
<% @user.followers.each do |user| %>
  <table>
    <tr>
      <% unless @user.name == user.name %>
        <td><%= link_to user.name, user_path(user), class:"indexusername" %></td>
        <td><%= render partial: 'follow_form', locals: { user: user } %></td>
        <td><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %></td>
      <% end %>
    </tr>
  </table>
<% end %>
</div>
