<% provide(:title, 'All users') %>
<h1>ユーザー一覧</h1>

<ul class="users">
  <% @users.each do |user| %>
    <div>
      <% unless current_user.name == user.name %>
        <%= link_to user.name, user %>
        <%= render 'follow_form', user: user %>
        <%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %>
      <% end %>
    </div>
  <% end %>
</ul>